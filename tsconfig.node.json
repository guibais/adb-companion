{
  "compilerOptions": {
    "target": "ES2022",
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "outDir": "./dist-electron",
    "rootDir": "."
  },
  "include": ["vite.config.ts", "electron/**/*.ts", "src/types/**/*.ts"]
}
